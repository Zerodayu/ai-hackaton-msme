generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model suppliers {
  supplier_id       String @id @default(cuid())
  name              String
  location          String
  eligibility       Json
  description       Json
  reliability_score Int

  transactions   transactions[]
  productionLogs production_logs[]
}

model transactions {
  transaction_id String   @id @default(cuid())
  supplier_id    String
  amount         Int
  price          Float
  date           DateTime @default(now())
  quality        Json
  status         String

  supplier suppliers @relation(fields: [supplier_id], references: [supplier_id])
}

model production_logs {
  log_id       String   @id @default(cuid())
  date         DateTime @default(now())
  product_type String
  quantity     Int
  supplier_id  String

  supplier suppliers @relation(fields: [supplier_id], references: [supplier_id])
}
